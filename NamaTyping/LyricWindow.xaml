<Window
    x:Class="LyricWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title=""
    Width="380"
    Height="380"
    Icon="Images/document-music-playlist.png">

    <DockPanel>
        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBar ToolBarTray.IsLocked="True">
                <Button Click="Button_Click" ToolTip="再読み込み">
                    <Image
                        Width="16"
                        Height="16"
                        VerticalAlignment="Center"
                        SnapsToDevicePixels="True"
                        Source="Images/arrow-circle-double.png" />
                </Button>
            </ToolBar>
        </ToolBarPanel>

        <Grid Margin="5">
            <ScrollViewer>
                <TextBlock x:Name="LyricTextBlock" />
            </ScrollViewer>
        </Grid>
    </DockPanel>

</Window>
