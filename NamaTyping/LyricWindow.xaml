<Window x:Class="LyricWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="" Height="380" Width="380" Icon="Images/document-music-playlist.png">

    <DockPanel>
        <ToolBarPanel  DockPanel.Dock="Top">
            <ToolBar ToolBarTray.IsLocked="True">
                <Button ToolTip="再読み込み" Click="Button_Click">
                    <Image VerticalAlignment="Center" Source="Images/arrow-circle-double.png" Width="16" Height="16" SnapsToDevicePixels="True" />
                </Button>
            </ToolBar>
        </ToolBarPanel>

        <Grid Margin="5">
            <ScrollViewer>
                <TextBlock x:Name="LyricTextBlock" />
            </ScrollViewer>
        </Grid>
    </DockPanel>

</Window>
